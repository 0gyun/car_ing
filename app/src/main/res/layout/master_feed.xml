<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="344dp"
        android:layout_height="344dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/caring_warm_grey5"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/master_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="장인을 만나다"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/master_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/master_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="독일 수입차 전문 20년"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/master_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/master_about"
                android:layout_alignParentBottom="false"
                android:layout_gravity="bottom|left"
                android:layout_toLeftOf="@id/master_btn"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:text="BMW, 벤츠, 아우디, 폭스바겐...\n독일 자동차만 전문으로 진행한\n개업 20주년 튜닝샵을 소개합니다."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/master_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_above="@id/master_about"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/caring_main"
                android:text="더 알아보기"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <androidx.cardview.widget.CardView
                android:id="@+id/master_about"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/shop_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/shop_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:srcCompat="@tools:sample/avatars" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/shop_photo"
                        android:text="튜닝샵 이름"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shop_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/shop_name"
                        android:layout_alignLeft="@id/shop_name"
                        android:text="서울 강북"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/shop_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/shop_name"
                        android:text="전문분야/전문분야/전문분야"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>