                    android:layout_marginRight="36dp"
                    android:background="#D7DFF9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="460dp"
                    android:text="프로모션 / 쿠폰"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:checked="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="490dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="73dp"
                    android:layout_marginTop="493dp"
                    android:text="11월 공임비 4% 할인 프로모션"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="493dp"
                    android:layout_marginRight="42dp"
                    android:text="-20,000원"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="570dp"
                    android:layout_marginRight="36dp"
                    android:background="#D7DFF9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="600dp"
                    android:text="결제 수단"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="650dp"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/pay2" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="650dp"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/pay3" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="650dp"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/pay1" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="780dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="15dp"
                    android:layout_height="160dp">
                    <ImageView
                        android:background="@color/caring_blue_grey1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:text="최종 결제액"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="42dp"
                        android:text="480,000원"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="90dp"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_height="50dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bookendBT"
                            android:text="결제하기"
                            android:textColor="@color/caring_main"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>