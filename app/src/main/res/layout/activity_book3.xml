<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/caring_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="110dp"
                    android:background="@drawable/book3" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="35dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/caring_main" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="19dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/strite" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="18dp"
                        android:text="스트라이트"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="40dp"
                        android:lineSpacingExtra="3dp"
                        android:text="[롤스로이스st][프리미엄]천장 무드등\n설치 패키지\n2022.02.16"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="230dp"
                    android:text="제품가"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="230dp"
                    android:layout_marginRight="42dp"
                    android:text="300,000"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="280dp"
                    android:text="공임"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="280dp"
                    android:layout_marginRight="42dp"
                    android:text="300,000"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="330dp"
                    android:text="부가세"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="330dp"
                    android:layout_marginRight="42dp"
                    android:text="9,500"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="380dp"
                    android:text="주문 금액"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="380dp"
