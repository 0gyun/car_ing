<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book1Activity">
    <ImageView
        android:id="@+id/IV"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="165dp"
        android:background="@drawable/book2"
        android:layout_height="39dp"/>
    <TextView
        android:id="@+id/TV1"
        app:layout_constraintTop_toBottomOf="@+id/IV"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약날짜"
        android:textColor="@color/caring_blue_grey6"
        android:textSize="18dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/CV1"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TV1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="425dp"
        android:layout_height="425dp">
        <ImageView
            android:layout_margin="30dp"
            android:background="@drawable/book2_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/TV2"
        app:layout_constraintTop_toBottomOf="@+id/CV1"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약시간"
        android:textColor="@color/caring_blue_grey6"
        android:textSize="18dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TV2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="15dp"
        android:layout_width="220dp"
        android:layout_height="160dp">
        <ImageView
            android:background="@color/caring_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/book2_img2"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="9dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book2"
            android:text="2021년 2월 29에 시공 예약하기"
            android:textStyle="bold"
            android:textColor="@color/caring_blue_grey6"
            android:textSize="19dp"
            android:background="@color/caring_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>