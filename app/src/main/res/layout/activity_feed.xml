<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeedActivity">

    <LinearLayout
        android:id="@+id/profileLL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@color/black"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="12dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="박지현"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="서울"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="14dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/ic_baseline_message_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/ic_baseline_bookmark_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/profileLL"
        android:background="@drawable/caring_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profileBT"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:text="▲"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </androidx.appcompat.widget.AppCompatButton>
    <com.google.android.material.tabs.TabLayout
        android:layout_marginVertical="15dp"
        android:id="@+id/tab"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tab_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBT"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorGravity="top"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="@color/black">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:background="@drawable/radius_background_yello"
        android:layout_marginTop="15dp"
        android:id="@+id/viewPager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab"
        android:layout_width="350dp"
        android:layout_height="500dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>