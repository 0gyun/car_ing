<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".owlCustom">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <ImageView
            android:background="@drawable/owl_img1"
            android:layout_width="match_parent"
            android:layout_height="260dp"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/owl_img2"
            android:layout_width="match_parent"
            android:layout_height="360dp"/>
    </FrameLayout>
    <ImageView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/caring_blue_grey4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/owl_img3"
            android:layout_width="380dp"
            android:layout_height="28dp"/>
        <ImageButton
            android:id="@+id/selectBT"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/owl_img4"
            android:layout_width="45dp"
            android:layout_height="14dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="130dp">
                    <ImageView
                        android:background="@color/caring_blue_grey2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:background="@drawable/owl_custom_img1"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="left|center"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="15dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="25dp"
                        android:text="[프리미엄]천장 무드등 설치 패키지"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="15dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="제품가 100,000 ~ 400,000\n공임 200,000 ~ 300,000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.caㅈㄷrdview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="130dp">
                    <ImageView
                        android:background="@color/caring_blue_grey2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:background="@drawable/owl_custom_img2"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="left|center"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="15dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="25dp"
                        android:text="[프리미엄]천장 내장재 교체"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/caring_blue_grey6"
                        android:textSize="15dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="제품가 300,000 ~ 400,000\n공임 200,000 ~ 300,000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.caㅈㄷrdview.widget.CardView>

            </LinearLayout>
        </ScrollView>
        <ImageButton
            android:id="@+id/btn2"
            android:layout_marginBottom="120dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/owl_img7"
            android:layout_width="120dp"
            android:layout_height="55dp"/>
    </FrameLayout>
</LinearLayout>