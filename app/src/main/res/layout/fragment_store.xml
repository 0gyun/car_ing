<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:background="@drawable/hyundai_collab"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/store_selection"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="38dp"/>
    <ImageView
        android:background="@drawable/store_items"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"/>
    <TextView
        android:layout_marginTop="-10dp"
        android:id="@+id/TV1"
        app:layout_constraintTop_toBottomOf="@+id/IV"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태그 필터"
        android:textColor="@color/caring_blue_grey8"
        android:textSize="18dp"
        android:textStyle="bold" />
    <ImageView
        android:background="@drawable/store_filter"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_width="220dp"
        android:layout_height="26dp"/>
    <ImageView
        android:layout_marginTop="12dp"
        android:background="#9CA4C3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/goMaker"
                    android:layout_margin="25dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_margin="10dp"
                        android:background="@drawable/store_item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:layout_margin="10dp"
                        android:background="@drawable/store_item2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
    </ScrollView>
</LinearLayout>