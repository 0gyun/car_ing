<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".School1Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:background="@drawable/school_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/backBT"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/back_btn_white"
                    android:layout_width="30dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="52dp"
                    android:layout_gravity="bottom"
                    android:text="STEP 1"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="bottom"
                    android:text="내 차 불러오기"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="650dp">
                <ImageView
                    android:background="@drawable/step12_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="짜잔! 메이커에서 만나는 첫 화면이에요!\n저의 소중한 자동차, 툴툴이의 모습이 보이네요~"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="제 툴툴이는 다양한 튜닝을 시공할 수 있고,\n실내 공간의 활용도가 높은 SUV 차량이에요!
"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="실물이랑 아주 똑~같은 모습으로 옮겨져 있는데,\n어때요? 멋지죠?"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="65dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="메이커에서는 브랜드 정식 디자인 라이센스를\n이용하기 때문에 보다 현실성있는 이미지를 \n확인할 수 있는데요,"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="그래서 이렇게 외관을 확인하는 것은 물론\n실내도 완벽하게 구현된 이미지를 제공한답니다!
"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="또한 확대/축소를 통해 더 디테일한\n가상 튜닝을 할 수 있도록 되어있는데요."
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="왼쪽 하단의 VIEW 버튼을 통해\n다양한 각도로 차량 화면을 간편하게 볼 수도 있어요."
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="화면을 요리조리 바꿔가며\n변신하는 내 차를 즐겨볼 수 있답니다! XD"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="음.. 그럼 어디서 내 차량 이미지를 불러 올 수 있을까요?"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="65dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="네비게이션 바에 위치한 기본 프로필 설정에서\n차량 모델 설정을 통해 실제 차량의 3D이미지를\n메이커로 불러올 수 있어요."
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="65dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="꼭 내 차가 아니어도 괜찮답니다!\n드림카도 좋고, 친구의 차, 가족의 차 등\n꾸미고 싶은 모든 차를 설정할 수 있어요."
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="그럼 메이커로 자동차 이미지를 불러내고\n본격적인 튜닝을 시작해볼게요~"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:background="@drawable/tooli_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:textColor="@color/caring_blue_grey8"
                    android:text="툴툴이의 멋진 변신을 기대해주세요!"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/stage1_to_school_btn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/get_start" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>