<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TuningAroundFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="46dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="295dp"
            android:src="@drawable/redspot" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="28dp"
            android:layout_marginLeft="277dp"
            android:layout_marginTop="368dp"
            android:src="@drawable/blackspot" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="28dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="436dp"
            android:src="@drawable/blackspot" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="400dp"
            android:layout_marginRight="36dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_gps_fixed_24"
            app:borderWidth="0dp"
            app:fabSize="mini" />

        <androidx.cardview.widget.CardView
            android:id="@+id/CV"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/fab"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스트라이트"
                    android:textStyle="bold"
                    android:textColor="@color/caring_blue_grey6"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="151dp"
                android:layout_marginTop="50dp"
                android:text="캠핑"
                android:textSize="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/owlcustomimg" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="63dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_yellow" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="85dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/call" />

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/share" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bookmark" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/partner" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/tutorial_start_yello"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:text="튜닝샵 페이지로 이동"
                android:textSize="18dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>