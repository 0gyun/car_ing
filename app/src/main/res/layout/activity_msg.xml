<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MsgActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/IV1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_width="14dp"
                android:layout_height="27dp"
                android:background="@drawable/back_btn" />
            <ImageView
                android:id="@+id/IV2"
                android:background="@drawable/caring_profile"
                android:layout_marginLeft="46dp"
                app:layout_constraintLeft_toRightOf="@+id/IV1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginLeft="25dp"
                app:layout_constraintLeft_toRightOf="@+id/IV2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="스트라이트"
                    android:textSize="20dp"
                    android:textColor="@color/caring_blue_grey6"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:background="@drawable/tuning_shop_logo"
                    android:layout_marginLeft="7dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#9CA4C3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_marginTop="35dp"
            android:background="@drawable/msg1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="180dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/msg2"
            android:layout_width="match_parent"
            android:layout_height="255dp"/>
        <ImageView
            android:layout_marginRight="65dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/msg3"
            android:layout_gravity="right"
            android:layout_width="120dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="380dp"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textAlignment="textEnd"
                android:textColor="#9CA4C3"
                android:text="천장 무드등 시공 가격이 얼마 인가요?     "
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_rounded_search_yellow" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/msg_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fly"
            android:layout_width="30dp"
            android:layout_height="33dp"/>
    </LinearLayout>
</LinearLayout>