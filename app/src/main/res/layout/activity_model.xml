<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModelActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:background="@drawable/tooli_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="툴리"
                android:textColor="@color/caring_blue_grey8"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="튜닝 마스터"
                android:textColor="@color/caring_blue_grey8"
                android:textSize="13dp" />
        </LinearLayout>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/maker_3icon"
            android:layout_width="100dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv1"
            android:layout_alignBottom="@id/webview"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ex_in_selection"
            android:layout_width="60dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@id/webview"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ex_in_selection2"
            android:layout_width="80dp"
            android:layout_height="35dp"/>
        <ImageButton
            android:id="@+id/bt"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_bottom_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <LinearLayout
            android:id="@+id/item_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/xBT"
                android:layout_marginTop="10dp"
                android:background="@drawable/x_button"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/slice" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>