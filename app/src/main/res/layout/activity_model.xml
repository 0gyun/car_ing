<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModelActivity">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv1"
            android:layout_alignBottom="@id/webview"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ex_in_selection"
            android:layout_width="60dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@id/webview"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ex_in_selection2"
            android:layout_width="80dp"
            android:layout_height="35dp"/>
        <ImageButton
            android:id="@+id/bt"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_bottom_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <ImageView
            android:id="@+id/item_view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/select_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>