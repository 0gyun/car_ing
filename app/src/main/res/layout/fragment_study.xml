<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <!--Progress Bar created-->
                <com.kofigyan.stateprogressbar.StateProgressBar
                    android:id="@+id/your_state_progress_bar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#E7FF54"
                    app:spb_animateToCurrentProgressState="true"
                    app:spb_checkStateCompleted="true"
                    app:spb_currentStateDescriptionColor="#000000"
                    app:spb_currentStateNumber="one"
                    app:spb_maxStateNumber="five"
                    app:spb_stateBackgroundColor="#E3E3E1"
                    app:spb_stateDescriptionColor="#808080"
                    app:spb_stateForegroundColor="@color/black"
                    app:spb_stateNumberBackgroundColor="#000000"
                    app:spb_stateNumberForegroundColor="#eeeeee" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tutorialIV1"
                    android:layout_width="370dp"
                    android:layout_height="280dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/searchview_radius" />

                <TextView
                    android:id="@+id/stage1TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tutorialIV1"
                    android:layout_alignTop="@+id/tutorialIV1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="STAGE1"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tutorialIV1"
                    android:layout_alignTop="@+id/stage1TV"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="카잉 튜토리얼"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/startIB1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@id/tutorialIV1"
                    android:layout_alignBottom="@+id/tutorialIV1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/tutorial_start_yello"
                    android:onClick="startOn" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/tutorialIV1"
                    android:layout_alignTop="@id/startIB1"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/ic_baseline_star_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tutorialIV1"
                    android:layout_alignTop="@id/startIB1"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="9dp"
                    android:text="3/20"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/startIB1"
                    android:layout_alignTop="@+id/startIB1"
                    android:layout_marginTop="9dp"
                    android:text="시작하기"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tutorialIV2"
                    android:layout_width="370dp"
                    android:layout_height="280dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/searchview_radius" />

                <TextView
                    android:id="@+id/stage2TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tutorialIV2"
                    android:layout_alignTop="@+id/tutorialIV2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="STAGE2"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tutorialIV2"
                    android:layout_alignTop="@+id/stage2TV"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="커스텀 툴 다루기"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/startIB2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignRight="@id/tutorialIV2"
                    android:layout_alignBottom="@+id/tutorialIV2"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/tutorial_start_yello"
                    android:onClick="startOn" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/tutorialIV2"
                    android:layout_alignTop="@id/startIB2"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/ic_baseline_star_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tutorialIV2"
                    android:layout_alignTop="@id/startIB2"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="9dp"
                    android:text="3/20"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/startIB2"
                    android:layout_alignTop="@+id/startIB2"
                    android:layout_marginTop="9dp"
                    android:text="시작하기"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>