<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:background="@color/caring_blue_grey2"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
                <!--Progress Bar created-->
                <com.kofigyan.stateprogressbar.StateProgressBar
                    android:id="@+id/your_state_progress_bar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/caring_blue_grey2"
                    app:spb_animateToCurrentProgressState="true"
                    app:spb_checkStateCompleted="false"
                    app:spb_currentStateDescriptionColor="@color/caring_blue_grey6"
                    app:spb_currentStateNumber="one"
                    app:spb_descriptionTopSpaceIncrementer="5dp"
                    app:spb_maxStateNumber="five"
                    app:spb_stateBackgroundColor="@color/white"
                    app:spb_stateDescriptionColor="@color/caring_blue_grey4"
                    app:spb_stateDescriptionSize="12dp"
                    app:spb_stateForegroundColor="@color/caring_blue_grey6"
                    app:spb_stateNumberBackgroundColor="@color/white"
                    app:spb_stateNumberForegroundColor="@color/caring_blue_grey6"
                    app:spb_stateSize="10dp" />
            </RelativeLayout>

            <ImageView
                android:background="@color/caring_blue_grey2"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="440dp"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/tutoRL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/school_image1"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/stage1TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="STAGE1"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/stage1TV"
                        android:layout_alignParentStart="true"
                        android:text="카잉 튜토리얼"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@id/startIB1_btn"
                        android:layout_marginEnd="5dp"
                        android:layout_toLeftOf="@id/stage1_star"
                        android:background="@drawable/ic_baseline_star_yellow" />

                    <TextView
                        android:id="@+id/stage1_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/startIB1_btn"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toLeftOf="@+id/startIB1_btn"
                        android:text="3/20"
                        android:textColor="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/startIB1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        app:cardCornerRadius="20dp">

                        <ImageButton
                            android:id="@+id/startIB1"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:background="@drawable/tutorial_start_yello" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:text="STAGE1 입장"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="440dp"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
