<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout1"
    tools:context=".School1Activity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView
            android:background="@drawable/school_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/backBT"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back_btn_white"
            android:layout_width="30dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="52dp"
            android:layout_gravity="bottom"
            android:text="STEP 1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom"
            android:text="내 차 불러오기"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/text1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/school1_text1"
        android:layout_width="wrap_content"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/text2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/school1_text2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/text3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/school1_text3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"/>
    <ImageView
        android:id="@+id/text4"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/school1_text4"
        android:layout_width="wrap_content"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/school1_img1"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>
</LinearLayout>