<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="440dp"
                android:layout_height="440dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/caring_blue_grey5"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/squareCV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/caring_blue_grey2"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        app:contentPadding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="true"
                            app:cardBackgroundColor="@color/caring_blue_grey5"
                            app:cardCornerRadius="90dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:srcCompat="@tools:sample/avatars" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/bookmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                app:srcCompat="@drawable/ic_baseline_bookmark_24"
                                app:tint="@color/caring_blue_grey5" />

                            <TextView
                                android:id="@+id/bookmark_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/bookmark"
                                android:layout_alignBottom="@id/bookmark"
                                android:layout_marginRight="20dp"
                                android:layout_toRightOf="@id/bookmark"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="2k"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/bookmark"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@id/bookmark_number"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                app:srcCompat="@drawable/ic_baseline_message_24"
                                app:tint="@color/caring_blue_grey5" />

                            <TextView
                                android:id="@+id/comment_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/comment"
                                android:layout_alignBottom="@id/bookmark"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@id/comment"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="467"
                                android:textSize="20sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/master"
                android:layout_width="440dp"
                android:layout_height="440dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/caring_blue_grey2"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="@color/caring_blue_grey5"
                        app:cardCornerRadius="90dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@tools:sample/avatars" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/master_about"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tag1"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="@color/caring_blue_grey1"
                                app:cardCornerRadius="30dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tag2"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@id/tag1"
                                app:cardBackgroundColor="@color/caring_blue_grey1"
                                app:cardCornerRadius="30dp">


                            </androidx.cardview.widget.CardView>

                            <ImageButton
                                android:id="@+id/bookmark2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/bookmark_number2"
                                android:background="@android:color/transparent"
                                app:srcCompat="@drawable/ic_baseline_bookmark_24"
                                app:tint="@color/caring_blue_grey5" />

                            <TextView
                                android:id="@+id/bookmark_number2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/comment2"
                                android:gravity="center"
                                android:text="2k"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/comment2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/comment_number2"
                                android:background="@android:color/transparent"
                                app:srcCompat="@drawable/ic_baseline_message_24"
                                app:tint="@color/caring_blue_grey5" />

                            <TextView
                                android:id="@+id/comment_number2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:text="467"
                                android:textSize="20sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>