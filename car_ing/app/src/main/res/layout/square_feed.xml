<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/feed"
        android:layout_width="344dp"
        android:layout_height="344dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/caring_warm_grey5"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/inner_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/caring_warm_grey2"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/feed_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="90dp"
                    app:cardBackgroundColor="@color/caring_warm_grey5">

                    <ImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/store_button"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_bookmark_24"
                        app:tint="@color/caring_warm_grey5" />

                    <TextView
                        android:id="@+id/store_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="2k" />

                    <ImageButton
                        android:id="@+id/comment_button"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_message_24"
                        app:tint="@color/caring_warm_grey5" />

                    <TextView
                        android:id="@+id/comment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="467" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>